<%= turbo_stream_from comment %>
<%= turbo_frame_tag comment do %>
  <div class="d-flex justify-content-between">
    <div><%= comment.user.name %>:</div>
    <div class=""> <%= comment.body %></div>
    <div class="text-sm ">
      <%= link_to "Reply", "#", data: { action: "click->comment-reply#toggle" }, class: 'btn btn-primary btn-sm' %>
    </div>
    <div class="d-flex">
      <%= link_to "Edit", edit_comment_path(comment), class: 'm1-2 btn btn-secondary btn-sm' %>
      <%= button_to "Delete", comment_path(comment), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: 'btn btn-danger btn-sm' %>
    </div>
  </div>


<% end %>
